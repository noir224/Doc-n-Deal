<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdeaOwnerProfilePage"
    >

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progBarProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="574dp"
        android:layout_marginTop="568dp"
        android:indeterminate="true"
        app:indicatorColor="@color/semipurple" />

    <TextView
        android:id="@+id/ifnullProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="459dp"
        android:layout_marginTop="582dp"
        android:fontFamily="@font/armata"
        android:text="You do not have any projects"
        android:textColor="@color/blue"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="#222020" />

    <TextView
        android:id="@+id/inv"
        android:layout_width="200dp"
        android:layout_height="152dp"
        android:background="#A4B7DD"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicCProfile"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/homeProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePicCProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_home_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Home"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sponsorsProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:drawableStart="@drawable/ic_baseline_groups_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Sponsors"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/proposalstatusProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sponsorsProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:drawableStart="@drawable/ic_baseline_library_books_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Proposals' Status"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notiProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proposalstatusProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:drawableStart="@drawable/ic_baseline_notifications_active_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Notifications"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/creatorLogoutBtnProfile"
        android:layout_width="195dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_subdirectory_arrow_right_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/lightblue"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="LOGOUT"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/IOprofilePicProfile"
        android:layout_width="149dp"
        android:layout_height="141dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="313dp"
        android:layout_marginTop="56dp"
        android:layout_toEndOf="@+id/homeProfile"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/IOuserName"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IOprofilePicProfile"
        android:layout_marginStart="320dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/homeProfile"
        android:backgroundTint="@color/red"
        android:hint="Username"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IOfield"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@id/IOphoneNumber"
        android:text="Field"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/IOphoneNumber"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/IOemail"
        android:text="Phone Number"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/IOemail"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/homeProfile"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        android:textSize="18sp" />

    <Button
        android:id="@+id/creatorEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/IOuserName"
        android:layout_marginStart="347dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@id/homeProfile"
        android:backgroundTint="@color/blue"
        android:text="Edit"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="83dp"
        android:layout_height="43dp"
        android:layout_below="@+id/creatorEdit"
        android:layout_marginStart="97dp"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@id/homeProfile"
        app:srcCompat="@drawable/ic_baseline_email_24"
        app:tint="@color/blue" />

    <TextView
        android:id="@+id/lineIOP"
        android:layout_width="154dp"
        android:layout_height="31dp"
        android:layout_below="@+id/creatorEdit"
        android:layout_marginStart="520dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/armata"
        android:text="____________"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lineIOP2"
        android:layout_width="770dp"
        android:layout_height="23dp"
        android:layout_below="@+id/creatorEdit"
        android:layout_marginStart="210dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/armata"
        android:text="__________________________________________________"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="83dp"
        android:layout_height="43dp"
        android:layout_below="@+id/creatorEdit"
        android:layout_marginStart="89dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@id/IOemail"
        app:srcCompat="@drawable/ic_baseline_phone_24"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="83dp"
        android:layout_height="43dp"
        android:layout_below="@+id/creatorEdit"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/IOphoneNumber"
        app:srcCompat="@drawable/ic_baseline_business_center_24"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/arrf"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/publicproj"
        android:layout_marginStart="950dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

    <ImageView
        android:id="@+id/arrb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/publicproj"
        android:layout_marginStart="240dp"
        android:layout_marginTop="58dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:id="@+id/publicproj"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginStart="308dp"
        android:layout_marginTop="67dp"
        android:layout_toEndOf="@id/homeProfile"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Public Projects"
        android:textAlignment="center"
        android:textColor="@color/darkblue"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVPublicPro"
        android:layout_width="686dp"
        android:layout_height="128dp"
        android:layout_below="@id/IOemail"
        android:layout_marginStart="270dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="117dp"
        android:clipToPadding="false"
        android:orientation="horizontal">


    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>