<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedProjects">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="#222020" />


    <TextView
        android:id="@+id/nullSharedProjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="430dp"
        android:layout_marginTop="249dp"
        android:fontFamily="@font/armata"
        android:text="You do not have any shared projects"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:visibility="visible" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progBarSharedProjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="583dp"
        android:layout_marginTop="344dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/semipurple" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/SharedProjectsrv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textView90"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/homeSharedProjects" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="809dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SharedProjectsrv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="204dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/armata"
        android:text="_________________________________________________________________________________"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/inv"
        android:layout_width="200dp"
        android:layout_height="118dp"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicCSharedProjects"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/homeSharedProjects"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePicCSharedProjects"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_home_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Home"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/SharedProjects"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeSharedProjects"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:drawableStart="@drawable/ic_baseline_library_books_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#A4B7DD"
        android:text="Shared Projects"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/NotiSharedProjects"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SharedProjects"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:drawableStart="@drawable/ic_baseline_notifications_active_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Notifications"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/SponsorLogoutBtnSharedProjects"
        android:layout_width="195dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_subdirectory_arrow_right_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/lightblue"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="LOGOUT"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sharedwithyou"
        android:layout_width="385dp"
        android:fontFamily="@font/armata"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="202dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/homeSharedProjects"
        android:backgroundTint="@color/red"
        android:text="Shared With You"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView90"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sharedwithyou"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/homeSharedProjects"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/armata"
        android:text="Stage 1 (Proposal Document)"
        android:textAlignment="center"
        android:textColor="@color/lightblue"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/homeSharedProjects"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/armata"
        android:text="Stage 2 (Vision Document)"
        android:textAlignment="center"
        android:textColor="@color/lightblue"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/null91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView91"
        android:layout_gravity="center"
        android:layout_marginStart="452dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/armata"
        android:text="No shared documents in this stage"
        android:textColor="@color/blue"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="809dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/null91"
        android:layout_alignParentStart="true"
        android:layout_marginStart="204dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/armata"
        android:text="_________________________________________________________________________________"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginStart="18dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/homeSharedProjects"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/armata"
        android:text="Stage 3 (SRS Document)"
        android:textAlignment="center"
        android:textColor="@color/lightblue"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/null92"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView92"
        android:layout_gravity="center"
        android:layout_marginStart="452dp"
        android:layout_marginTop="57dp"
        android:fontFamily="@font/armata"
        android:text="No shared documents in this stage"
        android:textColor="@color/blue"
        android:textSize="20dp" />

</RelativeLayout>