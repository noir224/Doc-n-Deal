<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="71dp"
        android:fontFamily="@font/armata"
        android:text="Name:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/APIName"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="157dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/custom_long_input"
        android:elevation="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="API Name"
        android:inputType="textLongMessage|textPersonName"
        android:shadowColor="@color/blue" />

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/APIName"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="510dp"
        android:layout_marginTop="71dp"
        android:fontFamily="@font/armata"
        android:text="Link:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/apiLink"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-34dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@drawable/custom_long_input"
        android:elevation="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="API Link"
        android:inputType="textLongMessage|textPersonName"
        android:shadowColor="@color/blue" />

    <ImageView
        android:id="@+id/deleteapi"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_above="@+id/APIName"
        android:layout_marginStart="54dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/apiLink"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        app:tint="@color/lightblue" />
</RelativeLayout>