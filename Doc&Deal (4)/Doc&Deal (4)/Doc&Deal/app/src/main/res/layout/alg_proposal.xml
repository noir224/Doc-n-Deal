<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="275dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="602dp"
        android:fontFamily="@font/armata"
        android:text="Algorithm:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/algName"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="157dp"
        android:layout_marginTop="-33dp"
        android:layout_marginEnd="81dp"
        android:background="@drawable/custom_long_input"
        android:elevation="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Algorithm"
        android:inputType="textLongMessage|textPersonName"
        android:shadowColor="@color/blue" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="275dp"
        android:layout_height="33dp"
        android:layout_below="@+id/algName"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="389dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="278dp"
        android:fontFamily="@font/armata"
        android:text="Name:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/algTech"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="-270dp"
        android:layout_marginTop="-33dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@drawable/custom_long_input"
        android:elevation="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Algorithm Name"
        android:inputType="textLongMessage|textPersonName"
        android:shadowColor="@color/blue" />

    <ImageView
        android:id="@+id/deletealg"
        android:layout_width="33dp"
        android:layout_height="42dp"
        android:layout_above="@+id/algName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="-59dp"
        android:layout_toEndOf="@+id/algTech"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        app:tint="@color/lightblue" />
</RelativeLayout>