<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewitem"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="30dp"
        >

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/armata"
                android:text="Name"
                android:textColor="@color/darkblue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/armata"
                android:text="Stage"
                android:textColor="@color/darkblue"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/viewDoc"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:backgroundTint="@color/blue"
                android:padding="1dp"
                android:text="View Proposal"
                android:textColor="@color/white"
                app:strokeColor="@color/darkblue"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/acceptwithre"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:backgroundTint="#E7A808"
                android:padding="0dp"
                android:text="Accept with Revision"
                android:textColor="@color/darkblue"
                app:strokeColor="@color/darkblue"
                app:strokeWidth="2dp" />
            <Button
                android:id="@+id/accept"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:backgroundTint="#8AC984"
                android:padding="0dp"
                android:text="Accept"
                android:textColor="@color/darkblue"
                app:strokeColor="@color/darkblue"
                app:strokeWidth="2dp" />
            <Button
                android:id="@+id/reject"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:backgroundTint="#FD4C4C"
                android:padding="0dp"
                android:text="Reject"
                android:textColor="@color/darkblue"
                app:strokeColor="@color/darkblue"
                app:strokeWidth="2dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>