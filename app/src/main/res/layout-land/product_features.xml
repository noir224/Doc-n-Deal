<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Feature:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/vpfeature"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView1"
        android:background="@drawable/custom_long_input"
        android:gravity="top"
        android:hint="Feature"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="@color/blue"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_below="@+id/vpfeature"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Priority:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/pspinner"
        android:layout_width="115dp"
        android:layout_height="61dp"
        android:layout_below="@+id/vpfeature"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:shadowColor="@color/blue" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_below="@+id/vpfeature"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/pspinner"
        android:fontFamily="@font/armata"
        android:text="Effort:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/espinner"
        android:layout_width="115dp"
        android:layout_height="61dp"
        android:layout_below="@+id/vpfeature"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:shadowColor="@color/blue" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_below="@+id/espinner"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Risk:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/rspinner"
        android:layout_width="115dp"
        android:layout_height="61dp"
        android:layout_below="@+id/espinner"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView4"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:shadowColor="@color/blue" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_below="@+id/espinner"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:layout_toEndOf="@+id/rspinner"
        android:text="Stability:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/sspinner"
        android:layout_width="115dp"
        android:layout_height="61dp"
        android:layout_below="@+id/espinner"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView5"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:shadowColor="@color/blue" />


    <ImageView
        android:id="@+id/deleteprofeat"
        android:layout_width="33dp"
        android:layout_height="42dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-50dp"
        android:layout_toEndOf="@+id/vpfeature"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        app:tint="@color/lightblue" />


</RelativeLayout>