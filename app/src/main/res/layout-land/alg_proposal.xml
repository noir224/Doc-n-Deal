<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="135dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Algorithm:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/algName"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="157dp"
        android:layout_marginTop="-32dp"
        android:background="@drawable/custom_long_input"
        android:gravity="center"
        android:hint="Algorithm"
        android:inputType="textLongMessage|textPersonName"
        android:shadowColor="@color/blue" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_below="@+id/algName"
        android:layout_toEndOf="@+id/algName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Name:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/algTech"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-34dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@drawable/custom_long_input"
        android:elevation="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Algorithm Name"
        android:inputType="textLongMessage|textPersonName"
        android:shadowColor="@color/blue" />

    <ImageView
        android:id="@+id/deletealg"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_above="@+id/algName"
        android:layout_marginStart="54dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/algTech"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        app:tint="@color/lightblue" />
</RelativeLayout>