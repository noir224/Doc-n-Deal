<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="700dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@drawable/popupbackground"
    >


    <ScrollView
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/docsRVpopup"
            android:layout_width="600dp"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
    </ScrollView>

    <TextView
        android:id="@+id/ifnullProjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="201dp"
        android:fontFamily="@font/armata"
        android:text="You do not have any documents"
        android:visibility="gone"
        android:textColor="@color/blue"
        android:textSize="20dp" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progBarProjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="240dp"
        android:layout_marginTop="201dp"
        android:indeterminate="true"
        app:indicatorColor="@color/semipurple" />

</RelativeLayout>