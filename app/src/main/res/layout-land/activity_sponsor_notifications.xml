<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SponsorNotifications">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="#aba4bd" />

    <TextView
        android:id="@+id/nullNotifSponsor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="452dp"
        android:layout_marginTop="354dp"
        android:fontFamily="@font/armata"
        android:text="You do not have any Notifications"
        android:textColor="@color/blue"
        android:textSize="20dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifsponrv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/notifTitle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/notifhome" />

    <TextView
        android:id="@+id/inv"
        android:layout_width="200dp"
        android:layout_height="118dp"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/NotifSponprofilePicCProfile"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/notifhome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NotifSponprofilePicCProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_home_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Home"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/notifsharedprojects"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifhome"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:drawableStart="@drawable/ic_baseline_library_books_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Shared Projects"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notifnotifspon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifsharedprojects"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:background="#A4B7DD"
        android:drawableStart="@drawable/ic_baseline_notifications_active_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/darkblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Notifications"
        android:textAlignment="viewStart"
        android:textColor="@color/darkblue"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/NotifSponsorLogoutBtnProfile"
        android:layout_width="195dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_subdirectory_arrow_right_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/lightblue"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="LOGOUT"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notifTitle"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="202dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/notifhome"
        android:backgroundTint="@color/red"
        android:text="NOTIFICATIONS"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:textStyle="bold" />

</RelativeLayout>
