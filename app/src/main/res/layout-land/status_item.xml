<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/stage1item"
        android:layout_width="720dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        android:layout_below="@+id/textView21">
        <RelativeLayout
            android:layout_width="720dp"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/viewDoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stage1Comment"
                android:layout_alignParentStart="true"
                android:layout_marginStart="260dp"
                android:layout_marginTop="18dp"
                android:text="View Document"
                android:backgroundTint="#92c98d"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/stage1title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="240dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/armata"
                android:text="Stage 1 (Proposal)"
                android:textColor="@color/semipurple"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/StageStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stage1title"
                android:layout_marginStart="93dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/armata"
                android:text="status"
                android:textColor="@color/blue"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stage1title"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/armata"
                android:text="Status :"
                android:textColor="@color/semipurple"
                android:textSize="20dp"
              />

            <TextView
                android:id="@+id/st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/armata"
                android:text="Feedback :"
                android:textColor="@color/semipurple"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/stage1Comment"
                android:layout_width="700dp"
                android:layout_height="50dp"
                android:layout_below="@+id/st"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/armata"
                android:padding="15dp"
                android:text="There is no Feedback"
                android:textSize="14dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>