<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="The problem of:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/vProblemOF"
        android:layout_width="613dp"
        android:layout_height="136dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView7"
        android:background="@drawable/custom_long_input"
        android:gravity="top"
        android:hint="Problem of"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="@color/blue"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_below="@+id/vProblemOF"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Affects:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/vAffects"
        android:layout_width="613dp"
        android:layout_height="136dp"
        android:layout_below="@+id/vProblemOF"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView8"
        android:background="@drawable/custom_long_input"
        android:gravity="top"
        android:hint="Affects"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="@color/blue"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/vAffects"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="The impact of which is:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/vImpactOF"
        android:layout_width="613dp"
        android:layout_height="136dp"
        android:layout_below="@+id/vAffects"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView9"
        android:background="@drawable/custom_long_input"
        android:gravity="top"
        android:hint="Impacts"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="@color/blue"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/vImpactOF"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="a successful solution would be:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/vSolution"
        android:layout_width="613dp"
        android:layout_height="136dp"
        android:layout_below="@+id/vImpactOF"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView10"
        android:background="@drawable/custom_long_input"
        android:gravity="top"
        android:hint="Solution"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="@color/blue"
        android:textIsSelectable="true" />


    <ImageView
        android:id="@+id/deleteprobdec"
        android:layout_width="33dp"
        android:layout_height="42dp"
        android:layout_above="@+id/vProblemOF"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-50dp"
        android:layout_toEndOf="@+id/vProblemOF"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        app:tint="@color/lightblue" />


</RelativeLayout>