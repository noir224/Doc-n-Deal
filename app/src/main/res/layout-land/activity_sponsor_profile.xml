<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SponsorProfile"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="#aba4bd" />

    <TextView
        android:id="@+id/inv"
        android:layout_width="200dp"
        android:layout_height="152dp"
        android:background="#A4B7DD"
        android:textSize="18sp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/SprofilePicCProfile"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/profile" />


    <TextView
        android:id="@+id/ShomeProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SprofilePicCProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_home_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Home"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/ProjectIdeas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ShomeProfile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:drawableStart="@drawable/ic_baseline_library_books_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Shared Projects"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/SnotiProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProjectIdeas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:drawableStart="@drawable/ic_baseline_notifications_active_24"
        android:drawablePadding="7dp"
        android:drawableTint="@color/lightblue"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Notifications"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/newnotiSprofile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="174dp"
        android:layout_marginTop="252dp"
        android:src="@drawable/ic_baseline_fiber_manual_record_24" />



    <TextView
        android:id="@+id/SponsorLogoutBtnProfile"
        android:layout_width="195dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_subdirectory_arrow_right_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/lightblue"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="LOGOUT"
        android:textAlignment="viewStart"
        android:textColor="@color/lightblue"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/fullScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/textView3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/SprofilePicProfile"
                android:layout_width="162dp"
                android:layout_height="148dp"
                android:layout_marginLeft="319dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/SponsorUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SprofilePicProfile"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="274dp"
                android:layout_marginTop="10dp"
                android:hint="Username"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sponsorUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="274dp"
                android:layout_marginTop="104dp"
                android:backgroundTint="@color/red"
                android:textColor="@color/darkblue"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/SponsorField"
                android:layout_width="253dp"
                android:layout_height="30dp"
                android:layout_below="@+id/SponsorUserName"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="275dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/red"
                android:hint="Sponsor Field"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="900dp"
                android:layout_height="30dp"
                android:layout_below="@+id/SponsorEdit"
                android:layout_marginTop="20dp"
                android:background="@color/blue"
                android:paddingLeft="20dp"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/SponsorPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SponsorEmail"
                android:layout_marginStart="29dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@id/SimageView5"
                android:hint="Phone Number"
                android:textColor="@color/darkblue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Percentage"
                android:layout_width="900dp"
                android:layout_height="30dp"
                android:layout_below="@+id/Description"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:paddingLeft="20dp"
                android:text="Projects' Percentages"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Contact"
                android:layout_width="900dp"
                android:layout_height="30dp"
                android:layout_below="@+id/SponsoredProjects"
                android:layout_marginTop="30dp"
                android:background="@color/blue"
                android:paddingLeft="20dp"
                android:text="Contact Information"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/SP"
                android:layout_width="900dp"
                android:layout_height="30dp"
                android:layout_below="@+id/Sinsta"
                android:layout_marginTop="30dp"
                android:background="@color/blue"
                android:paddingLeft="20dp"
                android:text="Sponsored Projects"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/texthelpsponsorprofile"
                android:layout_width="232dp"
                android:layout_height="89dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="530dp"
                android:layout_marginTop="868dp"
                android:alpha="0.8"
                android:background="@color/lightblue"
                android:maxWidth="400dp"
                android:maxHeight="250dp"
                android:minWidth="400dp"
                android:padding="10dp"
                android:shadowRadius="10"
                android:text="here are the projects sponsored by this sponsor"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/arrowsponsorprofile"
                android:layout_width="46dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="742dp"
                android:layout_marginTop="863dp"
                android:alpha="0.8"
                android:src="@drawable/ic_baseline_arrow_right_24" />

            <TextView
                android:id="@+id/SponsorEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Contact"
                android:layout_marginStart="26dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/SimageView4"
                android:hint="Email"
                android:textColor="@color/darkblue"
                android:textSize="18sp" />

            <Button
                android:id="@+id/SponsorEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/SponsorField"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/blue"
                android:text="Edit"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/SimageView4"
                android:layout_width="51dp"
                android:layout_height="35dp"
                android:layout_below="@id/Contact"
                android:layout_marginLeft="139dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_baseline_email_24"
                app:tint="@color/red" />

            <ImageView
                android:id="@+id/SimageView5"
                android:layout_width="45dp"
                android:layout_height="34dp"
                android:layout_below="@+id/SimageView4"
                android:layout_marginLeft="142dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_baseline_phone_24"
                app:tint="@color/red" />

            <TextView
                android:id="@+id/SponsoredProjects"
                android:layout_width="59dp"
                android:layout_height="38dp"
                android:layout_below="@id/Percentage"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/RejectedProjects"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_below="@id/Percentage"
                android:layout_marginStart="300dp"
                android:layout_marginLeft="437dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/SponsoredProjects"
                android:backgroundTint="@color/red"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/darkblue"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/Sfb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/SponsorPhoneNumber"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@id/Stwt"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/Stwt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/SponsorPhoneNumber"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@id/Sinsta"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/Sinsta"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/SimageView5"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="23dp"
                app:srcCompat="@drawable/instagram" />

            <ImageView
                android:id="@+id/crossy"
                android:layout_width="46dp"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="870dp"
                android:layout_marginTop="-2dp"
                app:srcCompat="@drawable/cross" />

            <TextView
                android:id="@+id/rejectedPercent"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_below="@id/Percentage"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/RejectedProjects"
                android:alpha="1"
                android:backgroundTint="@color/red"
                android:text="% of Rejected Projects"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sponsoredPercent"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_below="@id/Percentage"
                android:layout_marginStart="4dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/SponsoredProjects"
                android:alpha="1"
                android:backgroundTint="@color/red"
                android:text="% of Sponsored Projects"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Description"
                android:layout_width="760dp"
                android:layout_height="110dp"
                android:layout_below="@id/desc"
                android:layout_marginTop="10dp"
                android:alpha="1"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/red"
                android:hint="No Description"
                android:textColor="@color/darkblue"
                android:textSize="20sp" />

            <Button
                android:id="@+id/addSP"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RVsponsoredPro"
                android:layout_alignParentStart="true"
                android:layout_marginStart="225dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="70dp"
                android:backgroundTint="@color/blue"
                android:text="Add a Sponsored Project"
                android:textSize="20dp" />
            <Button
                android:id="@+id/applyTobtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RVsponsoredPro"
                android:layout_alignParentStart="true"
                android:layout_marginStart="250dp"
                android:layout_marginTop="35dp"
                android:visibility="gone"
                android:layout_marginBottom="70dp"
                android:backgroundTint="@color/blue"
                android:text="Apply a project"
                android:textSize="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVsponsoredPro"
                android:layout_width="683dp"
                android:layout_height="268dp"
                android:layout_below="@id/SP"
                android:layout_marginStart="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="112dp"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <ImageView
                android:id="@+id/projectrvhelppic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="774dp"
                android:layout_marginTop="870dp"
                android:src="@drawable/ic_baseline_help_outline_24" />

            <TextView
                android:id="@+id/nullProjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="196dp"
                android:layout_marginTop="993dp"
                android:fontFamily="@font/armata"
                android:text="There aren't any sponsored projects."
                android:textColor="@color/blue"
                android:textSize="20dp" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>