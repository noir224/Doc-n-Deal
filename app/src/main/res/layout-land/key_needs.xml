<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Need:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/vNeed"
        android:layout_width="613dp"
        android:layout_height="136dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView1"
        android:background="@drawable/custom_long_input"
        android:gravity="top"
        android:hint="Need"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="@color/blue"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_below="@+id/vNeed"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Priority:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="115dp"
        android:layout_height="61dp"
        android:layout_below="@+id/vNeed"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView2"
        android:background="@drawable/custom_input"
        android:drawablePadding="12dp"
        android:gravity="center_vertical"
        android:paddingRight="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Concerns:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/vConcerns"
        android:layout_width="613dp"
        android:layout_height="136dp"
        android:layout_below="@+id/spinner"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="@drawable/custom_long_input"
        android:gravity="top"
        android:hint="Impacts"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="@color/blue"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/vConcerns"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Current Solution:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/vCurrSolution"
        android:layout_width="613dp"
        android:layout_height="136dp"
        android:layout_below="@+id/vConcerns"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView4"
        android:background="@drawable/custom_long_input"
        android:gravity="top"
        android:hint="Current Solution"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="@color/blue"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/vCurrSolution"
        android:layout_marginStart="49dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/armata"
        android:text="Proposed Solution:"
        android:textAlignment="textStart"
        android:textColor="@color/semipurple"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/vPropSolution"
        android:layout_width="613dp"
        android:layout_height="136dp"
        android:layout_below="@+id/vCurrSolution"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView5"
        android:background="@drawable/custom_long_input"
        android:gravity="top"
        android:hint="Proposed Solution"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:selectAllOnFocus="true"
        android:shadowColor="@color/blue"
        android:textIsSelectable="true" />

    <ImageView
        android:id="@+id/deletekneed"
        android:layout_width="33dp"
        android:layout_height="42dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-50dp"
        android:layout_toEndOf="@+id/vPropSolution"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        app:tint="@color/lightblue" />


</RelativeLayout>