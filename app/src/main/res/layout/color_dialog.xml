<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/acceptwr_dialog"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        >

        <RelativeLayout
            android:id="@+id/dialog"
            android:layout_width="400dp"
            android:layout_height="320dp"
            android:backgroundTint="@color/blue">

            <TextView
                android:id="@+id/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Color Representation"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="20dp" />


            <ImageView
                android:id="@+id/color"
                android:layout_width="35dp"
                android:layout_height="34dp"
                android:layout_marginLeft="223dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_color_lens_24" />

            <ImageView
                android:id="@+id/semipurp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="67dp"
                android:layout_marginLeft="223dp"
                android:layout_marginTop="97dp"
                android:src="@drawable/ic_baseline_color_lens_24"
                android:tint="@color/semipurple" />

            <ImageView
                android:id="@+id/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="67dp"
                android:layout_marginLeft="223dp"
                android:layout_marginTop="126dp"
                android:src="@drawable/ic_baseline_color_lens_24"
                android:tint="#E7A808" />

            <ImageView
                android:id="@+id/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="67dp"
                android:layout_marginLeft="223dp"
                android:layout_marginTop="155dp"
                android:src="@drawable/ic_baseline_color_lens_24"
                android:tint="#8AC984" />

            <ImageView
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="67dp"
                android:layout_marginLeft="223dp"
                android:layout_marginTop="184dp"
                android:src="@drawable/ic_baseline_color_lens_24"
                android:tint="#FD4C4C" />

            <ImageView
                android:id="@+id/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="67dp"
                android:layout_marginLeft="223dp"
                android:layout_marginTop="213dp"
                android:src="@drawable/ic_baseline_color_lens_24"
                android:tint="#c6c9cf" />

            <TextView
                android:id="@+id/Text2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Pending"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Text3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Text2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Accepted With Revision"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Text4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Text3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Accepted"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Text5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Text4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Rejected"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/Text6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Text5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="No Document sent"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/okButton1"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_below="@id/Text6"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="260dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/blue"
                android:padding="1dp"
                android:text="OK"
                android:textSize="17dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>