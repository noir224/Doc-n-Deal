<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/acceptwr_dialog"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
       >

    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="700dp"
        android:layout_height="230dp"
        android:backgroundTint="@color/blue"
        >

        <TextView
            android:id="@+id/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="In order to accept with revision, you should type your feedback."
            android:textColor="@color/blue"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="249dp"
            tools:layout_editor_absoluteY="20dp" />

        <EditText
            android:id="@+id/comment"
            android:layout_width="570dp"
            android:layout_height="73dp"
            android:layout_below="@+id/Text"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:hint="Add your feedback"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="630dp"
            tools:layout_editor_absoluteY="-42dp" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/comment"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/blue"
            android:padding="1dp"
            android:text="Confirm"
            android:textSize="18dp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/confirmButton"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/lightblue"
            android:padding="1dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>